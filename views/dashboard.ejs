        .project b {
            font-weight: 500;
        }

        .project .description {
            font-size: 1vw;
            line-height: 23px;
            color: #717171;
        }

        .project .author {
            float: right;
            font-size: 1vw;
            line-height: 23px;
            color: #717171;
        }
        .switch-btn-active {
            color: #fff;
            background-color: #6067ed;
        }
        .switch-btns .btn {
            transition: all 0.2s;
